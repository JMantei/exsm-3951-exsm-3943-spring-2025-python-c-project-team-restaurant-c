@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<section class="hero bg-light text-dark d-flex align-items-center"
    style="min-height: 70vh; background-image: url('@Url.Content("~/images/pexels-ella-olsson-572949-1640772.jpg")'); background-size: cover; background-position: center; width: 100%;">
    <div class="container">
        <div class="col-md-6">
            <h1 class="display-4">harvest & hearth</h1>
            <h2>farm to table - Edmonton</h2>
            <a asp-controller="Home" asp-action="Menu" class="btn btn-primary mt-3">View Menu</a>
        </div>
    </div>
</section>

<section class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <img src="~/images/feature1.jpg" class="img-fluid" alt="Feature 1" />
        </div>
        <div class="col-md-6">
            <h5>Harvest & Hearth</h5>
            <p>At Harvest & Hearth, we're passionate about bringing the flavors of Alberta to your table. Nestled in
                downtown Edmonton, our modern Canadian bistro focuses on fresh, local ingredients, creating a dining
                experience that's as sustainable as it is unforgettable. Whether you're an urban professional, a food
                enthusiast, or someone who cares about sustainability, we're delighted to share our carefully crafted
                menu with you.</p>
        </div>
    </div>
    <div class="row align-items-center mb-5">
        <div class="col-md-6 order-md-2">
            <img src="~/images/feature2.jpg" class="img-fluid" alt="Feature 2" />
        </div>
        <div class="col-md-6 order-md-1">
            <h5>**Sed ut perspiciatis unde omnis**</h5>
            <p>Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia...</p>
        </div>
    </div>
</section>

<section class="hero-footer bg-light" style="min-height: 40vh;">
</section>
