@model IEnumerable<RestaurantManager.Models.MenuItem>
@using RestaurantManager.Models

@{
    ViewBag.Title = "Order";
    var dietaryTags = ViewBag.DietaryTags as List<DietaryTag>;
}

<div class="container py-5">
    <header class="text-center mb-5">
        <h2 class="fw-bold">Order for Pickup or Delivery</h2>
    </header>

    <div class="row">
        <partial name="_MenuSidebar" model="dietaryTags" />
        <main class="col-md-9">
            <partial name="_MenuGroupedItems" model="Model" />
        </main>
    </div>

    <!-- Cart Partial View -->
    @* @Html.Partial("_Cart", Model.OrderMenuItems) *@

</div>

@section Scripts {
    <script>
        document.querySelectorAll('.filter-link').forEach(link => {
            link.addEventListener('click', function () {
                const tag = this.dataset.tag;
                document.querySelectorAll('.menu-item').forEach(item => {
                    const itemTags = item.dataset.tags.split(',');
                    item.style.display = (tag === 'all' || itemTags.includes(tag)) ? '' : 'none';
                });
            });
        });
    </script>
}
