@model RestaurantManager.Models.Reservation

@{
    ViewBag.Title = "Book a Table";
}

<div class="reservation-background">
    <div class="reservation-overlay">
        <div class="reservation-form-card container py-5">
            <h2 class="text-center mb-4">Book Table</h2>

            @using (Html.BeginForm("SubmitReservation", "Reservation", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.ReservationDateTime, "Reservation Date & Time")
                    @Html.TextBoxFor(m => m.ReservationDateTime, new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(m => m.ReservationDateTime, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.GuestCount, "Number of Guests")
                    @Html.TextBoxFor(m => m.GuestCount, new { @class = "form-control", type = "number", min = "1", max =
                    "50" })
                @Html.ValidationMessageFor(m => m.GuestCount, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Notes, "Additional Reservation Requests")
                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                @await Html.PartialAsync("_UserInfo", Model.User)
            </div>

            <div class="mb-4">
                <p>Pre Order Menu</p>
            </div>





            <div class="border-top p-4">
                <form asp-controller="Reservation" asp-action="Confirmation" method="get">
                    <input type="hidden" name="selectedType" value="@Model" />
                    <button type="submit" class="btn btn-primary w-100">
                        Book Now
                    </button>
                </form>
            </div>

                        }
        </div>
    </div>
</div>

<style>
    .reservation-background {
        background: url('/images/patio.png') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .reservation-overlay {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 12px;
        padding: 2rem;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
    }

    .reservation-form-card h2 {
        font-weight: 600;
    }

    .form-control {
        border-radius: 0.5rem;
    }
</style>
