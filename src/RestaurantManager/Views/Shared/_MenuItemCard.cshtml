@using RestaurantManager.Enums
@model RestaurantManager.Models.MenuItem

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var showCart = currentController == "Order";
}

<div class="card menu-card custom-card h-100 p-3 d-flex flex-row" style="border: 1px solid #ddd; border-radius: 8px;">

    <!-- Dietary Tags -->
    @if (Model.MenuItemDietaryTags != null && Model.MenuItemDietaryTags.Any())
    {
        <div class="mb-2 w-20 d-flex flex-column">
            @foreach (var tagLink in Model.MenuItemDietaryTags)
            {
                if (tagLink.DietaryTag != null)
                {
                    <span class="badge">@tagLink.DietaryTag.Name?[0]</span>
                }
            }
        </div>
    }

    <div class="card-body d-flex flex-column text-start align-items-start">
        <!-- Menu Item Name -->
        <h5 class="card-title fw-bold text-success">@Model.Name</h5>

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text text-muted mb-3">@Model.Description</p>
        }

        <div class="d-flex justify-content-between align-items-end gap-3 w-100 mt-auto">
            <!-- Price -->
            <p class="fw-bold fs-5 text-orange mb-0">@Model.Price.ToString("C2")</p>

            <!-- Quantity Buttons -->
            @if (showCart)
            {
                <form method="post"
                    action="@Url.Action("RemoveFromCart", "Order", new { menuItemId = Model.Id, selectedType = ViewBag.SelectedType })">
                    <button type="button" onclick="updateCart('remove', @Model.Id, @((int)ViewBag.SelectedType));" class="btn btn-outline-primary">-</button>
                </form>

                <span class="fw-bold m-auto">
                    @((ViewBag.Cart as Order)?.OrderMenuItems?.FirstOrDefault(i => i.MenuItemId == Model.Id)?.Quantity ?? 0)
                </span>

                <form method="post"
                    action="@Url.Action("AddToCart", "Order", new { menuItemId = Model.Id, selectedType = ViewBag.SelectedType })">
                    <button type="button" onclick="updateCart('add', @Model.Id, @((int)ViewBag.SelectedType));" class="btn btn-outline-primary">+</button>
                </form>
            }
        </div>
    </div>
</div>

<script>

function updateCart(action, menuItemId, selectedType) {

    //Get all Params that are currently selected
    const urlParams = new URLSearchParams(window.location.search);

    //Set parameters for when cart updates
    urlParams.set('selectedType', selectedType);
    urlParams.set('menuItemId', menuItemId);

    //Build the URL for when add or remove it selected
    const baseUrl = action === 'add' 
        ? '@Url.Action("AddToCart", "Order")' 
        : '@Url.Action("RemoveFromCart", "Order")';

    //Add all the params that were previously selected
    const newUrl = baseUrl + '?' + urlParams.toString();

    window.location.href = newUrl;
}

</script>
