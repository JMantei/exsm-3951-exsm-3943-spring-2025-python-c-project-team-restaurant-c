@model RestaurantManager.Models.User

<h3>Harvest Club Rewards</h3>
@if (Model != null)
{
    <div class="mb-3">
        <label class="form-label">Apply Reward Points</label>
        <input asp-for="RewardsPoints" class="form-control" type="number" min="0" max="@Model.RewardsPoints" />
        <small class="text-muted">Available: @Model.RewardsPoints</small>
    </div>
}
else
{
    <p class="text-danger">Reward points not available.</p>
}
