<div class="card shadow-sm rounded-4 p-4 mb-5 border-0" style="max-width: 600px; margin: auto;">
  <h4 class="mb-4 text-dark fw-bold">Card Payment</h4>

  <form asp-controller="Order" asp-action="Payment" method="post">
    <div class="row g-3">

      <div class="col-12">
        <label for="cardNumber" class="form-label text-muted fw-medium">Card Number <span
            class="text-danger">*</span></label>
        <input type="tel" id="cardNumber" name="cardNumber" pattern="[\d ]*" required class="form-control rounded-3"
          placeholder="0000 0000 0000 0000" />
      </div>

      <div class="col-md-6">
        <label for="expirationMonth" class="form-label text-muted fw-medium">Expiry Month <span
            class="text-danger">*</span></label>
        <select id="expirationMonth" name="expirationMonth" required class="form-select rounded-3">
          <option value="" disabled selected>MM</option>
          @for (int i = 1; i <= 12; i++)
          {
            <option value="@i">@i.ToString("D2")</option>
          }
        </select>
      </div>

      <div class="col-md-6">
        <label for="expirationYear" class="form-label text-muted fw-medium">Expiry Year <span
            class="text-danger">*</span></label>
        <select id="expirationYear" name="expirationYear" required class="form-select rounded-3">
          <option value="" disabled selected>YYYY</option>
          @for (int year = DateTime.Now.Year; year <= DateTime.Now.Year + 15; year++)
          {
            <option value="@year">@year</option>
          }
        </select>
      </div>

      <div class="col-md-6">
        <label for="cvv" class="form-label text-muted fw-medium">CVV <span class="text-danger">*</span></label>
        <input type="tel" id="cvv" name="cvv" maxlength="3" required class="form-control rounded-3" placeholder="123" />
      </div>

    </div>

    <div class="mt-4 text-end">
      <button type="submit" class="btn btn-primary rounded-3 px-4">Pay Now</button>
    </div>
  </form>
</div>
