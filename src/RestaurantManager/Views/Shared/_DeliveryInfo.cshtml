@using RestaurantManager.Models
@model UserAddress

<div class="card shadow-sm rounded-4 p-4 mb-5 border-0" style="max-width: 600px; margin: auto;">
    <h4 class="mb-4 text-dark fw-bold">Delivery Address</h4>

    <form>
        <!-- Address Line 1 -->
        <div class="mb-3">
            <label asp-for="AddressLine1" class="form-label text-muted fw-medium">Address Line 1 <span
                    class="text-danger">*</span></label>
            <input asp-for="AddressLine1" class="form-control rounded-3" placeholder="123 Main St" required />
        </div>

        <!-- Address Line 2 -->
        <div class="mb-3">
            <label asp-for="AddressLine2" class="form-label text-muted fw-medium">Address Line 2</label>
            <input asp-for="AddressLine2" class="form-control rounded-3" placeholder="Apt, Suite, etc." />
        </div>

        <!-- City -->
        <div class="mb-3">
            <label asp-for="City" class="form-label text-muted fw-medium">City <span
                    class="text-danger">*</span></label>
            <input asp-for="City" class="form-control rounded-3" placeholder="City" required />
        </div>

        <!-- Province & Postal Code -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Province" class="form-label text-muted fw-medium">Province <span
                        class="text-danger">*</span></label>
                <input asp-for="Province" class="form-control rounded-3" placeholder="Province" required />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="PostalCode" class="form-label text-muted fw-medium">Postal Code <span
                        class="text-danger">*</span></label>
                <input asp-for="PostalCode" class="form-control rounded-3" placeholder="Postal Code" required />
            </div>
        </div>

        <!-- Country -->
        <div class="mb-4">
            <label asp-for="Country" class="form-label text-muted fw-medium">Country <span
                    class="text-danger">*</span></label>
            <input asp-for="Country" class="form-control rounded-3" placeholder="Canada" required />
        </div>
    </form>
</div>
