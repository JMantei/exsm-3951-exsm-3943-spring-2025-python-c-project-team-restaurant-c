@model RestaurantManager.Models.User

<h3 class="mb-4">Contact Information</h3>

<div class="contact-info-grid mb-4">
    <div class="form-group">
        <label asp-for="FirstName" class="form-label fw-semibold">First Name</label>
        <input asp-for="FirstName" class="form-control contact-input" />
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="form-label fw-semibold">Last Name</label>
        <input asp-for="LastName" class="form-control contact-input" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="form-label fw-semibold">Email</label>
        <input asp-for="Email" class="form-control contact-input" />
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="form-label fw-semibold">Phone</label>
        <input asp-for="Phone" class="form-control contact-input" />
    </div>
</div>

<style>
    .contact-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .contact-input {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 0.75rem;
    }

    .form-label {
        margin-bottom: 0.5rem;
        color: #495057;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }
</style>
